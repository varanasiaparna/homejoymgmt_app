<%= form_for @homejoym, :html => { :class => "form-horizontal homejoym" } do |f| %>

  <% if @homejoym.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@homejoym.errors.count, "error") %> prohibited this homejoym from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @homejoym.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :selectservice, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :selectservice, :class => 'form-control' %>
    </div>
    <%=f.error_span(:selectservice) %>
  </div>
  <div class="form-group">
    <%= f.label :payment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :payment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:payment) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :numofworkers, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :numofworkers, :class => 'form-control' %>
    </div>
    <%=f.error_span(:numofworkers) %>
  </div>
  <div class="form-group">
    <%= f.label :packages, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :packages, :class => 'form-control' %>
    </div>
    <%=f.error_span(:packages) %>
  </div>
  <div class="form-group">
    <%= f.label :ratecard, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ratecard, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ratecard) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                homejoyms_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
